/* pages/my-express/index.wxss */
@import "../../../templates/navigation/navigation.wxss";

.nav {
  background-color: #f6f6f6;
}

page {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.allFunctions {
  display: flex;
  width: 100%;
  flex-flow: row nowrap;
}

.active {
  color: #ffce58;
  border-bottom: 2px solid #ffce58;
}

.functionButton, .active {
  height: 40px;
  font-size: 15px;
  font-weight: normal;
  background-color: #fff;
  border-radius: 0;
}

#scrollView {
  width: 100%;
  height: 100%;
}

#page {
  width: 100%;
}

#page, .page-bd, .express {
  display: flex;
  flex-flow: column wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

/**内容部分**/

.page-bd {
  width: 100%;
}

.express {
  width: 100%;
  padding: 20px 10px;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}

.express-header, .express-content, .express-footer {
  display: flex;
  width: 100%;
}

.express-header {
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.publisher {
  display: flex;
  width: 100%;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.publisher-image {
  width: 40px;
  height: 40px;
  background-color: red;
  border-radius: 50%;
  margin-right: 10px;
  overflow: hidden;
}

.publish-info {
  display: flex;
  flex-flow: column wrap;
}

.published-time {
  margin-top: 4px;
  font-size: 11px;
  color: #ccc;
}

.operate {
  display: flex;
  width: 40px;
  height: 40px;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  font-weight: bolder;
}

.express-content {
  flex-flow: column wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.goods-description {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  width: 100%;
  padding: 10px 0px 0px;
  box-sizing: border-box;
}

.goods-images {
  display: flex;
  width: 100%;
  flex-flow: row wrap;
  justify-content: space-between;
}

.goods-image {
  margin-top: 10px;
  width: 32%;
  height: 0;
  padding-bottom: 32%;
  background-color: green;
  border-radius: 5px;
  overflow: hidden;
}

/*底部弹出菜单*/

.bottomModel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.205);
  z-index: 999;
  display: flex;
  flex-flow: column-reverse wrap;
}

.menu {
  display: flex;
  width: 100%;
  flex-flow: column-reverse wrap;
  background-color: #f6f6f6;
  border-radius: 10px;
}

.menuButton {
  width: 100% !important;
  background-color: white;
  margin-top: 10px;
}

.menuButton:last-child {
  margin-top: 0;
}

.goods-loading {
  margin: 10px 0;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.goods-loading text {
  font-size: 13px;
  color: #ccc;
}

.page-ft {
  width: 100%;
  text-align: center;
  font-size: 13px;
  color: #ccc;
}
