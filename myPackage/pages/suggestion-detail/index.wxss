/* pages/suggestion-detail/index.wxss */

@import "../../../templates/navigation/navigation.wxss";

.nav{
  background-color:#fff;
}

page{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
  background-color:#f6f6f6;
}

.page{
  width:100%;
}

.page-hd,
.page-bd,
.page-ft{
  width:100%;
}

.page-hd{
  background-color:#fff;
}

.info{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  width:100%;
  padding:10px 10px;
  box-sizing: border-box;
}

.info-content{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.user-image{
  width:40px;
  height: 40px;
  border-radius: 50%;
  background-color:#ccc;
  overflow: hidden;
}

.user-image image{
  width:100%;
  height: 100%;
}

.usernameAndTime{
  margin-left:10px;
  display: flex;
  flex-flow: column wrap;
}

.publishedTime{
  color:#ccc;
  font-size:11px;
}

.page-bd{
  background-color:#fff;
}

.content{
  display: flex;
  flex-flow: column wrap;
  box-sizing: border-box;
  padding:0px 10px 10px;
}

.suggestion{
  font-size:15px;
  margin-bottom:10px;
}

.images{
  width:100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}

.image{
  width:33%;
  height: 0px;
  padding-bottom:33%;
  margin-bottom: 5px;
  overflow: hidden;
}


.page-ft{
  display: flex;
  flex-flow: column wrap;
  width:100%;
  padding:0 10px;
  box-sizing: border-box;
}

.noResponse{
  margin-top:50px;
  width:100%;
  text-align: center;
  font-size:11px;
  color:#ccc;
}

.response{
  display: flex;
  margin-top:10px;
  width:100%;
  flex-flow: column wrap;
}

.response-content{
  font-size:15px;
  color:#ccc;
}