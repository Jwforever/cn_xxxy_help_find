/* pages/about/index.wxss */
@import "../../../templates/navigation/navigation.wxss";

.nav {
  background-color: #f6f6f6;
}

page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.page {
  display: flex;
  flex-flow: column wrap;
  width: 100%;
}

.page-hd {
  display: flex;
  width: 100%;
  height: 40%;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.logo {
  width: 100px;
  height: 100px;
  border-radius: 5px;
  overflow: hidden;
}

.logo image {
  width: 100%;
  height: 100%;
}

.page-bd {
  display: flex;
  width: 100%;
  flex-flow: row wrap;
}

.app-name {
  width: 100%;
  text-align: center;
  font-size: 18px;
  margin-bottom: 10px;
}

.our-description {
  width: 100%;
  padding: 0 10px;
}

.description {
  width: 100%;
  font-size: 13px;
  text-indent: 26px;
}

.page-ft {
  margin-top: 20px;
  width: 100%;
  text-align: center;
  font-size: 13px;
  color: #ccc;
}