/* pages/express/index.wxss */
@import "../../templates/navigation/navigation.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  margin: 0;
  padding: 0;
}

.page {
  display: flex;
  width: 100%;
  flex-flow: column wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.page-hd {
  width: 100%;
}

.scrollView{
  width:100%;
}

.page-bd {
  display: flex;
  width: 100%;
  flex-flow: column wrap;
}

/**类型选择**/

.express-type {
  display: flex;
  width: 100%;
  flex-flow: row wrap;
  box-sizing: border-box;
  padding: 10px 0px;
  background-color: #f6f6f6;
}

.type-button {
  display: inline-block;
  width: 80px;
  height: 30px;
  border-radius: 40px;
  text-align: center;
  line-height: 30px;
  background-color: #ccc;
  font-size: 13px;
  margin-left: 10px;
}

.active {
  background-color: rgb(21, 216, 21);
  color: white;
}

/**物品名称和类别**/
.goods-name,
.goods-category{
  display: flex;
  width:100%;
  height: 60px;
  box-sizing: border-box;
  padding:10px 10px;
  border-bottom:1px solid #ccc;
  flex-flow: row nowrap;
  align-items: center;
  overflow: hidden;
}

.goods-name input{
  flex-grow: 1;
  padding:0 10px;
}

picker{
  width:100%;
}

.picker{
  display: flex;
  width:100%;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-content: center;
}

.picker text{
  display: inline-block;
  height: 40px;
  line-height: 40px;
}

/**物品描述**/

.goods-description {
  display: flex;
  width: 100%;
  flex-flow: column wrap;
}

.description-title {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 10px 10px;
  justify-content: space-between;
}

.description-title text {
  font-size: 13px;
  color: #ccc;
}

.description-content {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 0px 10px;
}

.description-content textarea{
  width:100%;
  border:1px solid #ccc;
  background-color:#f6f6f6;
  font-size:15px;
  color:#ccc;
  border-radius: 5px;
  padding:5px 5px;
}


/**物品图片**/
.goods-images{
  box-sizing: border-box;
  width:100%;
}

/**图片上传的样式*/
.weui-uploader__input-box{
  width:86px !important;
  height:86px !important;
}

.weui-uploader__img{
  width:86px !important;
  height:86px !important;
}


/*提交区域*/
.express-zone {
  display: flex;
  flex-flow: column wrap;
  width: 100%;
  justify-content: center;
  margin-bottom:20px;
}

.express-button{
  width:50%;
  height: 40px;
  background-color:#FFCE58;
  font-size:20px;
  font-weight: normal;
}


/*没有授权或者是绑定情况*/
.page-bd-noLogin{
  display: flex;
  width:100%;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.noLogin-logo{
  width:100px;
  height: 100px;
  margin:0 auto;
  overflow: hidden;
}

.noLogin-logo image{
  width:100%;
  height: 100%;
}

.noLogin-content{
  margin:20px 0;
  width:100%;
  text-align: center;
  font-size:15px;
  color:#ccc;
}


#login-button{
  background-color:#FFCE58;
}