/* pages/authorization/index.wxss */
@import "../../templates/navigation/navigation.wxss";
@import "../../components/dialog/dialog.wxss";

/*修改顶部导航栏的颜色*/

.nav {
  background-color: #fff;
}

.page {
  width: 100%;
}

.page-bd {
  display: flex;
  width: 100%;
  height: 100%;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.logo {
  width: 100px;
  height: 100px;
}

.logo image {
  width: 100%;
  height: 100%;
}

.tip {
  width: 100%;
  font-size: 11px;
  color: rgb(81, 111, 209);
  text-align: center;
  box-sizing: border-box;
  padding-top:10px;
}

.btn-area {
  width: 100%;
  margin: 10px 0 0;
  display: flex;
  justify-content: center;
}

.btn {
  height: 40px;
  background-color: #ffce58;
  color: #fff;
  line-height: 40px;
  padding: 0;
  text-align: center;
}
